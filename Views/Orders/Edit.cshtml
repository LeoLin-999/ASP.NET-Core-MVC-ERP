@model OrdersViewModel

@{
    ViewData["Title"] = "訂單管理";
}

<h1>訂單維護</h1>

<h4>訂單主檔</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DispatchOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrdersForm.Orders_ID" />
            <div class="form-group">
                <label asp-for="OrdersForm.Customer_ID" class="control-label"></label>
				<select asp-for="OrdersForm.Customer_ID" class="form-select" asp-items="ViewBag.CustomerList">
					<option value="">請選擇</option>
				</select>
                <span asp-validation-for="OrdersForm.Customer_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdersForm.Orders_Date" class="control-label"></label>
                <input asp-for="OrdersForm.Orders_Date" class="form-control" />
                <span asp-validation-for="OrdersForm.Orders_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdersForm.Orders_Status" class="control-label"></label>
				<input class="form-check-input" type="radio" asp-for="OrdersForm.Orders_Status" value="0" />
				<label class="form-check-label">草稿</label>
				<input class="form-check-input" type="radio" asp-for="OrdersForm.Orders_Status" value="2" />
				<label class="form-check-label">待出貨</label>
				<input class="form-check-input" type="radio" asp-for="OrdersForm.Orders_Status" value="4" />
				<label class="form-check-label">部分出貨</label>
				<input class="form-check-input" type="radio" asp-for="OrdersForm.Orders_Status" value="5" />
				<label class="form-check-label">已出貨</label>
				<input class="form-check-input" type="radio" asp-for="OrdersForm.Orders_Status" value="3" />
				<label class="form-check-label">取消</label>
                <span asp-validation-for="OrdersForm.Orders_Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdersForm.Orders_Type" class="control-label"></label>
                <input asp-for="OrdersForm.Orders_Type" class="form-control" />
                <span asp-validation-for="OrdersForm.Orders_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4 class="mt-4">新增訂單明細</h4>
<form asp-action="AddDetails" method="post" class="border rounded p-3 bg-light">
    <input type="hidden" asp-for="DetailForm.Orders_ID" />
    <div class="form-group mb-2">
        <label asp-for="DetailForm.Product_ID">產品名稱</label>
        <select asp-for="DetailForm.Product_ID" class="form-select" asp-items="ViewBag.ProductList">
            <option value="">請選擇</option>
        </select>
        <span asp-validation-for="DetailForm.Product_ID" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="DetailForm.Warehouse_ID">出貨倉庫</label>
        <select asp-for="DetailForm.Warehouse_ID" class="form-select" asp-items="ViewBag.WarehouseList">
            <option value="">請選擇</option>
        </select>
        <span asp-validation-for="DetailForm.Warehouse_ID" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="DetailForm.Orders_Qty">數量</label>
        <input asp-for="DetailForm.Orders_Qty" class="form-control" type="number" min="1" />
        <span asp-validation-for="DetailForm.Orders_Qty" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">新增明細</button>
</form>
<h4 class="mt-4">訂單明細清單</h4>
<table class="table table-bordered">
	<thead class="table-dark">
		<tr>
			<th>產品</th>
			<th>倉庫</th>
			<th>數量</th>
			<th>單價</th>
			<th>小計</th>
			<th>建立人員</th>
			<th>修改人員</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var d in Model.DetailList)
	{
		<tr>
			<td>@d.Product_Name (@d.Product_ID)</td>
			<td>@d.Warehouse_Name (@d.Warehouse_ID)</td>
			<td>@d.Orders_Qty</td>
			<td>@d.Orders_Amount</td>
			<td>@d.Orders_SubTotal</td>
			<td>@d.CreaterName</td>
			<td>@d.UpdaterName</td>
            <td>
                <a asp-controller="Orders_Detail" asp-action="Edit" asp-route-id="@d.SequenceID" asp-route-ordersId="@d.Orders_ID">編輯</a> |
                <a asp-action="DeleteDetails" asp-route-id="@d.SequenceID" asp-route-ordersId="@d.Orders_ID">刪除</a>
            </td>
		</tr>
	}
	</tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
