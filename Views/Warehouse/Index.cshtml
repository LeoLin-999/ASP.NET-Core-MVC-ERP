@model IEnumerable<WarehouseDto>

@{
    ViewData["Title"] = "倉庫管理";
}

<h1>倉庫管理</h1>

<p>
    <a asp-action="Create">新增倉庫</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Max_Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Update_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdaterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreaterName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Update_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdaterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreaterName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Warehouse_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Warehouse_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Warehouse_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
