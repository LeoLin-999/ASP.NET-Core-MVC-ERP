@model MvcERPTest01.Models.Purchase_Detail

@{
    ViewData["Title"] = "Edit";
}

<h1>採購明細</h1>

<h4>明細維護</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SequenceID" />
			<input type="hidden" asp-for="Purchase_ID" />
            <div class="form-group">
                <label asp-for="Product_ID" class="control-label"></label>
				<select asp-for="Product_ID" class="form-select" asp-items="ViewBag.ProductList">
					<option value="">請選擇</option>
				</select>
                <span asp-validation-for="Product_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase_Qty" class="control-label"></label>
                <input asp-for="Purchase_Qty" class="form-control" />
                <span asp-validation-for="Purchase_Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase_Amount" class="control-label"></label>
				@Html.DisplayFor(model => model.Purchase_Amount)
            </div>
            <div class="form-group">
                <label asp-for="Purchase_SubTotal" class="control-label"></label>
                @Html.DisplayNameFor(model => model.Purchase_SubTotal)
            </div>
            <div class="form-group">
                <input type="submit" value="存檔" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Purchase" asp-action="Edit" asp-route-id="@Model?.Purchase_ID">返回採購單</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
