@model MvcERPTest01.Models.Products

@{
    ViewData["Title"] = "產品管理";
}

<h1>產品維護</h1>

<h4>編輯產品</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product_ID" />
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Status" class="control-label"></label>
				<input class="form-check-input" type="radio" asp-for="Product_Status" value="0" />
				<label class="form-check-label">編輯</label>
				<input class="form-check-input" type="radio" asp-for="Product_Status" value="1" />
				<label class="form-check-label">啟用</label>
				<input class="form-check-input" type="radio" asp-for="Product_Status" value="2" />
				<label class="form-check-label">缺貨</label>
				<input class="form-check-input" type="radio" asp-for="Product_Status" value="3" />
				<label class="form-check-label">停用</label>
                <span asp-validation-for="Product_Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
