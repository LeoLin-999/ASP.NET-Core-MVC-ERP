@model IEnumerable<SuppliersDto>

@{
    ViewData["Title"] = "供應商管理";
}

<h1>供應商管理</h1>

<p>
    <a asp-action="Create">新增供應商</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Update_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdaterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreaterName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Update_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdaterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreaterName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Supplier_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Supplier_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Supplier_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
