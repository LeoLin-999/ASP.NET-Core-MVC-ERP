<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcERPTest01.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<!-- LOGO -->
				<a class="navbar-brand" asp-area="" asp-controller="Erp" asp-action="Index">ERP</a>
				<span id= "_sClock"></span>
				<!-- 漢堡圖示：觸發 Offcanvas -->
				<button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#erpOffcanvas" aria-controls="erpOffcanvas">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Offcanvas 區塊：右側滑入 -->
				<div class="offcanvas offcanvas-end" tabindex="-1" id="erpOffcanvas" aria-labelledby="erpOffcanvasLabel">
					<div class="offcanvas-header">
						<h5 class="offcanvas-title" id="erpOffcanvasLabel">ERP 選單</h5>
						<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="關閉"></button>
					</div>
					<div class="offcanvas-body">
						<ul class="navbar-nav">
							<li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">產品管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Warehouse" asp-action="Index">倉庫管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Suppliers" asp-action="Index">供應管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index">客戶管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Inventory" asp-action="Index">庫存管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Purchase" asp-action="Index">採購管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Index">訂單管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Sales" asp-action="Index">銷貨管理</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Sys_Accounts" asp-action="Index">帳號管理</a></li>
						</ul>
						<hr />
						<span>@ViewData["FullName"] (@ViewData["UserID"])</span><br />
						<a class="btn btn-outline-secondary btn-sm mt-2" asp-controller="Default" asp-action="Logout">登出</a>
					</div>
				</div>
			</div>
		</nav>
	</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Enterprise Resource Planning - <a asp-area="" asp-controller="Erp" asp-action="Index">回首頁</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CommonFunctions.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script type="text/javascript">
    currentClock("_sClock");
</script>
